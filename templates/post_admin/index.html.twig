{% extends 'basedb.html.twig' %}

{% block title %}Publications{% endblock %}



{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Posts</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item">Posts</li>
                    <li class="breadcrumb-item active">Data</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Posts</h5>
                            <!-- Table with stripped rows -->
                            <table class="table datatable">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col>">Title</th>
                                    <th scope="col">Ctegory</th>
                                    <th scope="col">Author</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for post in posts %}
                                    {% if post.status == "Reported" %}
                                <tr class="table-danger">
                                    {% else %}
                                <tr>
                                    {% endif %}
                                    <th scope="row">{{ post.id }}</th>
                                    <td>{{ post.title }}</td>
                                    <td>
                                    {% for categorie in categories %}
                                    {{ categorie.tag }}
                                    {% endfor %}
                                    </td>
{#                                    <td>{{ post.categorie }}</td>#}
                                    <td>{{ post.user }}</td>
                                    <td>{{ post.createdAt|date('Y-m-d H:i:s')  }}</td>
                                    <td>{{ post.status }}</td>
                                    <td>
                                        <a href="{{ path('app_post_edit_Approuved_Admin', {'id': post.id}) }}" class="btn btn-success"><i class="bi bi-check2-square"></i></a>
                                        <a href="{{ path('app_post_edit_Reported_Admin', {'id': post.id}) }}" class="btn btn-danger"><i class="bi bi-flag"></i></a>

                                    </td>
                                </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->

                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main><!-- End #main -->
{% endblock %}
